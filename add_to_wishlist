window.dataLayer = window.dataLayer || [];
window.dataLayer.push({
  event: 'add_to_wishlist',  			// name of the event. In this case, it always must be add_to_wishlist
  ecommerce: {							
    items: [{							// an array with a product (or multiple products) that was added to a cart
      item_name: 'Mead Five Star 1-Subject Notebook, 8.5" x 11", College Ruled, 100 Sheets', 			// insert an actual product name
      item_id: '06206',				// insert an actual product ID
      price: '3.49',					// insert an actual product price. Number or a string. Don't include currency code
      item_brand: 'Five Star',			// insert an actual product price
      item_category: 'Paper',			// insert an actual product top-level category
	    item_category2: 'Notebooks',		// if it is possible to drill down the categories (e.g. Apparel, then T-shirt, then Men), use item_category2, item_category3, etc. Can use from item_category up to item_category5
      item_category3: 'Single and Multi Subject Notebooks',
      item_variant: 'Blue',				// insert an actual product variant
      item_list_name: 'category', // if a product is added to wishlist directly from product list, add the list name here
      item_list_id: 'products_category',	// if a product is added to wishlist directly from product list, add the list id here
      index: 3,							// if a product is added to wishlist directly from product list, add the position in the list here
      quantity: '1'						// product quantity of how many products were added to a wishlist
    }]
  }
});
